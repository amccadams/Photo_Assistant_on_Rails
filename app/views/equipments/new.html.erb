<h1>Add Camera Gear</h1>

<%= form_for @equipment do |f| %>
	<%= f.label :make %>
  <%= f.text_field :make %> 
  <%= f.label :model %>
  <%= f.text_field :model %>
  <%= f.label :equipment_category %>
  <%= f.select :equipment_category, [['Camera','Camera'], ['Lens','Lens'],['Lighting','Lighting'], ['Support','Support'], ['Accessory','Accessory']] %> <br />
  <%= f.label :serial %>
  <%= f.text_field :serial %><br />
    <%= f.label :purchase_date %>
  <%= f.text_field :purchase_date %><br />
    <%= f.label :description %>
  <%= f.text_area :description %>

 

	<%= f.submit "Add Gear" %><br />
   


	<%= link_to("Back to Equipment Page", {:controller => "equipments", :action => "index" }) %>
	<% end %>




 
