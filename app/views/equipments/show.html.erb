<h1>Edit Equipment Detail</h1>
<%= form_for @equipment do |f| %>
<%= f.label :make %>
  <%= f.text_field :make %><br />
	<%= f.label :model %>
  <%= f.text_field :model %><br />
  <%= f.label :serial %>
  <%= f.text_field :serial %><br />
    <%= f.label :purchasedate %>
  <%= f.text_field :purchasedate %><br />
    <%= f.label :description %>
  <%= f.text_area :description %><br />

	<%= f.submit "Edit Equipment", url: equipment_path, :method => :put %><br /><br />
	<%= button_to "Delete Gear", @equipment, :method => :delete %><br /><br />
	<%= link_to("Back to Equipment", {:controller => "equipments", :action => "index" }) %>
	<% end %>
