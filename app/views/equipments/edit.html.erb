<h1>Edit Equipment Detail</h1>

<%= simple_form_for @equipment do |f| %>
  <%= f.input :make %>
  <%= f.input :model %>
  <%= f.input :equipment_category, collection: [['Camera','Camera'], ['Lens','Lens'],['Lighting','Lighting'], ['Support','Support'], ['Accessory','Accessory']] %> 
  <%= f.input :serial %>
  <%= f.input :purchase_date %>
  <%= f.input :description %>
<%#= f.submit "Edit Equipment", url: equipment_path, :method => :put %>
<%= f.button :submit, :class => "btn btn-inverse" %>
<div class="btn-group">
  <%= link_to "Delete Equipment", @equipment, :method => :delete, :class => "btn btn-inverse" %>
</div>


  <% end %>
